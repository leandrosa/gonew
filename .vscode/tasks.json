{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "echo",
            "type": "shell",
            "command": "echo Hello"
        },
        {
            "label": "Gonew: New Project from template",
            "type": "shell",
            "command": "gonew",
            "args": [
                "github.com/leandrosa/gonew/${input:template-proj}",
                "${input:module}"
            ],
            "options": {
                "env": {
                    "PATH": "${env:PATH}:${env:HOME}/go/bin"
                }
            },
            "problemMatcher": [],
            "icon": {
                "id": "project",
                "color": "terminal.ansiGreen"
            }
        },
        {
            "label": "Go mod: update go version in go.mod",
            "type": "shell",
            "command": "gonew",
            "args": [
                "go mod edit -go $(go env GOVERSION | sed 's/^go//')"
            ],
            "options": {
                "env": {
                    "PATH": "${env:PATH}:${env:HOME}/go/bin"
                }
            },
            "problemMatcher": [],
            "icon": {
                "id": "project",
                "color": "terminal.ansiGreen"
            }
        },
        {
            "label": "Gonew: New Project and update go mod",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Gonew: New Project from template",
                "Go mod: update go version in go.mod"
            ],
            "problemMatcher": [],
            "icon": {
                "id": "debug-rerun",
                "color": "terminal.ansiGreen"
            }
        },
    ],
    "inputs": [
        {
            "id": "template-proj",
            "description": "Select the template for the project",
            "default": "helloWorld",
            "type": "pickString",
            "options": [
                "helloWorld",
                "api",
                "awsLambdas"
            ]
        },
        {
            "id": "module",
            "description": "Module url",
            "default": "example.com/user/<module-name>",
            "type": "promptString"
        },
    ]
}